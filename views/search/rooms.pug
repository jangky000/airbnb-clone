extends ../layout/layout.pug

block main
    div.container
        div.left_container
            div.search_info
                ul
                    li= count + "개의 숙소 "
                    li= checkin + ' - ' + checkout
                    li= " 게스트 " + guests + "명 이상 "
            div.search_title
                h2= location+"의 숙소"
            div.search_tag
                ul
                    li 
                        button(type="button")= "유연한 환불 정책"
                    li
                        button(type="button")= "숙소 유형"
                    li
                        button(type="button")= "요금"
                    li
                        button(type="button")= "즉시 예약"
                    li
                        button(type="button")= "침실과 침대"
                    li
                        button(type="button")= "필터 추가하기"
            div.search_list
                ul
                    -for(let i=0; i<list.length; i++)
                        li
                            div.rooms_row
                                div.rooms_img
                                    img(src=list[i]['image'], alt=h4=list[i]['title'])
                                div.rooms_info
                                    div.room_title
                                        div= list[i]['place']
                                        div.title= list[i]['title']
                                    div(style="margin: 10px 0; width: 32px;border-top: 1px solid rgb(221, 221, 221);")
                                    div.desc= list[i]['description1']
                                    div.desc= list[i]['description2']
                                    - const price = list[i]['price'].slice(3)+'/1박';
                                    div.price= price
            div.pages
                ul
                    -for(let i = 0; i<pageArr.length; i++)
                        li
                            -if(pageArr[i].curPage)
                                a.curPage(href=pageArr[i].href)= pageArr[i].name
                            -else
                                a(href=pageArr[i].href)= pageArr[i].name
            
        div.right_container
            div.googlemap
                div#gmap
                    section#contact.map
                        iframe(width="100%" height="700px" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://maps.google.com/maps?q=" + location + "&t=&z=12&ie=UTF8&iwloc=&output=embed")
                        